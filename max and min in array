#include <stdio.h>
int main() 
{
    int i, max, min;
    int arr[] = {3, 5, 7, 2, 8};
    int n = sizeof(arr) / sizeof(arr[0]);
    max = min = arr[0];
    for(i = 1; i < n; i++) 
	{
        if(arr[i] > max) 
		{
            max = arr[i];
        }
        if(arr[i] < min) 
		{
            min = arr[i];
        }
    }
    printf("Maximum = %d\n", max);
    printf("Minimum = %d\n", min);
    return 0;
}
